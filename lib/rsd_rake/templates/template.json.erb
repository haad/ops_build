{
    "variables": {
        "image_name": "<%= image_name %>",
        "image_version": "<%= image_version %>",
        "container_name": "<%= image_name %>",
        "cookbook_path": "<%= cookbook_path %>"
    },

    "builders": [{
        "type": "docker",
        "pull": false,
        "image": "ubuntu:14.04",
        "export_path": "{{ user `image_name` }}.tar",
        "run_command": ["run", "-d", "-i", "-t", "--name={{ user `container_name`}}" ,"-v", "{{.Volumes}}", "{{.Image}}", "/bin/bash"]
    }],

    "provisioners": [
        {
            "inline": [
                "apt-get update && apt-get -y install curl"
            ],
            "type": "shell"
        },
        {
            "type": "chef-solo",
            "run_list": <%= image_runlist %>,
            "json": <%= image_attributes %>,
            "cookbook_paths": [
                "{{ user `cookbook_path` }}"
            ]
        }],

    "post-processors": [{
        "type": "docker-import",
        "repository": "{{ user `image_name` }}",
        "tag": "{{ user `image_version` }}"
    }]
}
